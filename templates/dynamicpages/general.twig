{% extends 'layoutloggedin.twig' %}

{% block body %}

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default">
  <!-- Form Header Panel -->
    <div class="panel-heading">
      <div class="row">
        <div class="col-md-4">
          <h3>Test Study [#]</h3>
        </div>
        <div class="col-md-8">
          <!-- Progress to create Study-->
          <p>
          <ul class="nav nav-pills">
            <li class="active"><a href="general">General</a></li>
            <li><a href="variables">Variables</a></li>
            <li><a href="protocol">Protocol</a></li>
            <li><a href="scheduling">Scheduling</a></li>
          </ul>
        </p>
        </div>
      </div>
    </div>
  <!-- Form Content Panel -->
    <div class="panel-body panel-heading">
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label class="col-md-3 control-label">Study Name</label>
        <div class="col-md-9">
          <input type="text" class="form-control" value="{{study.name}}" placeholder="How the study will be referenced">
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label">Study Description</label>
        <div class="col-md-9">
          <input type="text" class="form-control" value="{{study.description}} "placeholder="Brief overview of the study">
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label">Root URL</label>
        <div class="col-md-9">
          <input type="text" class="form-control" placeholder="Base URL for the study">
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label">Researcher Name</label>
        <div class="col-md-9">
          <input type="text" class="form-control" placeholder="Primary person in change of the study">
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label">Contact Email</label>
        <div class="col-md-9">
          <input type="email" class="form-control" value="{{study.researcherEmail}}" placeholder="Primary contact email for the study">
        </div>
      </div>
    <!-- Form Buttons -->
      <div class="text-right">
      <button type="button" id="editButton" class="btn btn-default">
        <span class="glyphicon glyphicon-pencil"></span> Edit Fields
      </button>       
      <button type="button" id="saveButton" class="btn btn-default">
        <span class="glyphicon glyphicon-floppy-save"></span> Save
      </button>       
      </div>
    </form>
    </div>
  </div>
  </div>
</div>


{% endblock %}
