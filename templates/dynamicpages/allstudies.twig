{% extends 'layoutloggedin.twig' %}

{% block body %}

<h1 class="row wlux-static-info">{{ pageData.title }}</h1>
<h3>Studies Running Complete Draft Archived</h3>
<div id="wrapper">
    <div id="left_column">
    <table class="all">
        <thead class="all_head">
        	<tr>
        		<th class="header">Study Name</th>
        		<th class="header">Status</th>
