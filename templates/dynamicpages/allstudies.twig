        </thead>
        <tbody>
    {% for study in studies %}
        	<tr class="all_row">
	        	<td class="cell">
	            <em>{{ study.name }}</em> 
	            <br>
	            <p class="all_description"> {{ study.description }}</p>
	            </td>
	            <td class="cell">
	             {{study.status}}
	            </td>
	            <td class="cell">
	             {{study.dateCreated}}
	            </td>
	            <td class="cell">
	            <form class="all_more" method="post">
	            <button name="more" type="submit" value="{{study.name}}" id="{{study.name}}">Study Details ></button> 
	            </form>
	            </td>
            </tr>
    {% endfor %}
    	</tbody>
    	</table>
	</div>
	
    <div id="right_column">
